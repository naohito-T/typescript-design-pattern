{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "swc": true
  }
}
